<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC2D6EE">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/hirehublogo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/numberOfAdsTextView"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/numberOfAdsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:text="Number of Ads: "
        android:textSize="40sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:textColor="#EE2F20"
        android:textStyle="bold" />
    <Button
        android:id="@+id/backToPostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Post"
        android:layout_marginTop="700dp"
        android:layout_marginStart="250dp"
        android:backgroundTint="#6483A7"/>


</RelativeLayout>
